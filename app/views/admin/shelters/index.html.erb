<h1>Admin Shelters Index Page</h1>

<section class="shelter-all">
  <% @shelters.each do |shelter| %>
    <h3><%= shelter.name %></h3>
  <% end %>
</section>

<section class="shelter-pending-apps">
  <h2>Pending Applications:</h2>
    <p>
      <% @pets.each do |pet| %>
        <% if pet.count_pending_applications > 0 %>
            <h3><%= pet.shelter.name %></h3>
            <p># applications: <%= pet.count_pending_applications %> </p>
        <% end %>
      <% end %>
    </p>
</section>
